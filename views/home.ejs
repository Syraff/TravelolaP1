<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Travelola</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <style>
      body {
        background-color: rgba(242, 243, 243, 1);
      }
      a {
        text-decoration: none;
        color: black;
      }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light py-3 mb-4">
      <div class="container">
        <a class="navbar-brand" href="#"
          ><img
            class="img-fluid"
            src="flaro-assets/logos/flaro-logo-black.svg"
            alt=""
        /></a>
        <div class="collapse navbar-collapse me-5 justify-content-between">
          <div class="d-flex gap-4">
            <a class="nav-link" href="/">Home</a>
            <% if (userId) { %>
            <a class="nav-link" href="/transaction">Transactions</a>
            <% } %>
          </div>
          <% if (userId) { %>
          <div class="d-flex gap-2">
            <a class="btn btn-primary" href="/profile">Profile</a>
            <a class="btn btn-danger" href="/logout">Logout</a>
          </div>
          <% } else {%>
          <div class="d-flex gap-2">
            <a class="btn btn-primary" href="/login">Login</a>
            <a class="btn btn-secondary" href="/register">Register</a>
          </div>
          <% } %>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="d-flex flex-wrap gap-5">
        <% data.forEach(el => { %>
        <div class="card" style="width: 18rem">
          <a href="/package/detail/<%= el.id  %>">
            <img
              style="height: 150px"
              src="<%= el.image  %>"
              class="card-img-top img-fluid"
            />
            <div class="card-body">
              <h5 class="card-title mb-0"><%= el.name %></h5>
              <p class="card-title fs-5 text-secondary">
                <%= el.destination %>
              </p>
              <p class="card-text"><%= formatNumber(el.price) %></p>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
