<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Travelola</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body style="min-height: 100vh">
    <style>
      body {
        background-color: rgba(242, 243, 243, 1);
      }
      a {
        text-decoration: none;
        color: black;
      }
    </style>
    <div class="container mx-auto py-5">
      <form
        class="bg-white p-5 w-50 mx-auto mt-5"
        action="/register"
        method="post"
      >
        <h2 class="mb-4 fw-bold">Register</h2>
        <% if (errors) { %> <% errors.split(",").forEach(err => { %>
        <p class="mb-1" style="color: red">*<%= err %></p>
        <% }) %> <% } %>
        <div class="d-flex gap-3">
          <div class="mb-3 w-100">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" />
          </div>
          <div class="mb-3 w-100">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" />
          </div>
        </div>
        <div class="mb-3 w-100">
          <label class="form-label">Role</label>
          <select
            name="role"
            class="form-select"
            aria-label="Default select example"
          >
            <option disabled selected>Choose...</option>
            <option value="user">User</option>
            <option value="admin">Admin</option>
          </select>
        </div>
        <input
          type="submit"
          value="Register"
          class="btn btn-primary w-100 mb-2"
        />
        <a href="/login" class="btn btn-outline-danger w-100">Login</a>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
